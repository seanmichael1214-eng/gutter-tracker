<!DOCTYPE html>
<html>
<head>
    <title>Help & Support - Gutter Tracker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/style.css">
    <style>
        .help-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 30px;
            border-radius: 20px;
            margin-bottom: 24px;
            text-align: center;
        }
        .chat-container {
            background: linear-gradient(145deg, #1a2332 0%, #0f1620 100%);
            border: 2px solid rgba(255,255,255,0.15);
            border-radius: 16px;
            overflow: hidden;
            margin-bottom: 24px;
        }
        .chat-header {
            background: linear-gradient(135deg, rgba(0, 212, 170, 0.2) 0%, rgba(0, 255, 136, 0.1) 100%);
            padding: 16px;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            display: flex; align-items: center; gap: 12px;
        }
        .chat-header .avatar { width: 42px; height: 42px; border-radius: 50%; background: #00d4aa; display:flex; align-items:center; justify-content:center; color:white; }
        .chat-messages { height: 270px; overflow-y: auto; padding: 16px; display:flex; flex-direction:column; gap:12px; }
        .message { max-width: 85%; padding: 12px 14px; border-radius: 12px; font-size: 0.97rem; line-height:1.4; }
        .message.bot { background: rgba(0,0,0,0.25); color:#eaeaea; align-self: flex-start; }
        .message.user { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color:white; align-self: flex-end; }
        .chat-input-area { display:flex; gap:12px; padding:12px; border-top:1px solid rgba(255,255,255,0.1); background: rgba(0,0,0,0.15); }
        .chat-input-area input { flex:1; padding:12px; border-radius:6px; border:1px solid rgba(255,255,255,0.3); }
        .chat-input-area button { padding:12px 18px; border-radius:6px; border:0; background:#00d4aa; color:white; font-weight:700; cursor:pointer; }
    </style>
</head>
<body>
    <nav class="navbar">
        <h1>Gutter Tracker</h1>
        <ul>
            <li><a href="/">Dashboard</a></li>
            <li><a href="/customers">Customers</a></li>
            <li><a href="/jobs">Jobs</a></li>
            <li><a href="/inventory">Inventory</a></li>
            <li><a href="/quick-estimate">Quick Estimate</a></li>
            <li><a href="/help" class="active">Help</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>

    <div class="container" style="padding: 0 20px 60px;">
        <div class="help-header" style="margin-bottom:16px;">
            <h2>ðŸ¤– AI Tech Support</h2>
            <p style="color: #e9e9e9;">Ask me anything about using the app or request a task through commands.</p>
        </div>

        <!-- AI Chat -->
        <div class="chat-container">
            <div class="chat-header">
                <div class="avatar">ðŸ¤–</div>
                <div class="info">
                    <h3>Gutter Bot</h3>
                    <p>Online â€¢ Ready to help</p>
                </div>
            </div>
            <div class="chat-messages" id="chatMessages">
                <div class="message bot">
                    Hello! I can assist with app tweaks, password changes, splash phrasing, and small commands. Try: <code>/set-password nao$</code> or ask me a question.
                </div>
            </div>
            <div class="typing-indicator" id="typingIndicator" style="display:none;">
                <span></span><span></span><span></span>
            </div>
            <div class="chat-input-area">
                <input type="text" id="chatInput" placeholder="Ask me anything..." onkeypress="if(event.key==='Enter')sendMessage()">
                <button onclick="sendMessage()">Send</button>
            </div>
        </div>

        <!-- Optional Quick Help Topics (unchanged) -->
        <h3 style="margin-bottom: 16px;">ðŸ“š Quick Help Topics</h3>
        <div class="quick-help">
            <div class="help-card" onclick="askQuestion('How do I set the password?')">
                <div class="icon">ðŸ”‘</div>
                <h4>Password</h4>
                <p>Update login password via chat commands</p>
            </div>
            <!-- Additional quick cards can be added similarly -->
        </div>
    </div>

    <script>
        function addMessage(text, type) {
            const container = document.getElementById('chatMessages');
            const msg = document.createElement('div');
            msg.className = 'message ' + type;
            msg.innerHTML = text;
            container.appendChild(msg);
            container.scrollTop = container.scrollHeight;
        }
        function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message) return;
            addMessage('<strong>You:</strong> ' + message, 'user');
            input.value = '';
            document.getElementById('typingIndicator').style.display = 'flex';

            fetch('/api/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message: message })
            })
            .then(r => r.json())
            .then(data => {
                document.getElementById('typingIndicator').style.display = 'none';
                const text = data.response || data.message || data.answer || 'Iâ€™m not sure how to help with that.';
                addMessage(text, 'bot');
            })
            .catch(() => {
                document.getElementById('typingIndicator').style.display = 'none';
                addMessage('Connection error. Please try again.', 'bot');
            });
        }
        function askQuestion(q) {
            document.getElementById('chatInput').value = q;
            sendMessage();
        }
    </script>
</body>
</html>
